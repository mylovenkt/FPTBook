@{
    ViewBag.Title = "Home Page";
}

@model List<FPTTrainingSystem.Models.Book>
<!--This is equivalent to Model variable-->

<div class="container">

    @foreach (var book in Model)
    {
        <div class="row">
            <div class="post col-md-6">
                <h2 class="title">@book.Title</h2>
                <div class="about">
                    Posted on <i>@book.Date</i>
                    @if (book.Author != null)
                {
                        @:by <i>@book.Author.UserName</i>
                }
                </div>
                <div class="body-content">@Html.Raw(@book.Description)</div>
            </div>
        </div>

    }
</div>

<div style="float:left; width:100%;">

    @foreach (var book in Model)
    {
        <!--<p><a href="../Book/Details/@book.Id"> @book.Title</a></p>-->
        <p>
            @Html.ActionLink(book.Title, "Details", "Book", new { id = book.Id }, null)
        </p>
    }
</div>